package oefenen;

import java.util.Scanner;

public class CountArray {
	public static void main(String[] args) {
		
	    Scanner lezen = new Scanner(System.in);  
	    System.out.println("Give a sequence of numbers: ");
	    String numbers = lezen.nextLine(); 
	    
	    //5683264
	    
	    int cijfer = 0;
	    int som = 0; 
	    
	    for (int i = 0; i < numbers.length(); i++) {
	    	int(cijfer) = numbers.charAt(i);
	    	System.out.println(cijfer);
	    	som = (som + cijfer); 
	    }
	    
	    System.out.println("The total sum is: " + som);
	    
	}
}
