package oefenen;

import java.util.Scanner;

public class CountArray {
	public static void main(String[] args) {
		
	    Scanner lezen = new Scanner(System.in);  
	    System.out.println("Give a sequence of numbers: ");
	    String sequence = lezen.nextLine(); 
	   
	    int som = 0; 
	    
	    for (int i = 0; i < sequence.length(); i++) {
	    	char n = sequence.charAt(i);
	    	int cijfer = Integer.valueOf(n);
	    	System.out.println(cijfer);
	    	som = (som + cijfer); 
	    }
	    System.out.println("The total sum is: " + som);
	}
}
